# See https://editorconfig.org/ for more info :)

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# isort can't parse [*.{py, rst}], so specifying it separately
# https://github.com/timothycrosley/isort/issues/830
[*.rst]
indent_size = 4
[*.py]
indent_size = 4
max_line_length = 88
multi_line_output = 3
force_grid_wrap = false
include_trailing_comma = true
ensure_newline_before_comments=true
use_parentheses = true
known_third_party = attr,dtw,fastdtw,gym,habitat,habitat_baselines,habitat_sim,lmdb,msgpack_numpy,numpy,torch,torchvision,tqdm
